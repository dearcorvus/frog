/* 显示隐藏 */
.mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6)
}

.mask_box {
    position: fixed;
    left: 0;
    bottom: 0;
    transform: translate(0, 100%);
    backface-visibility: hidden;
    z-index: 5000;
    width: 100%;
    /* background-color: #fff; */
    transition: transform .3s;
    overflow: hidden;
    min-height: 70%;
}

.mask_box_toggle {
    transform: translate(0, 0)
}

.mask-box{
  width: 80%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  margin:0 auto;
}