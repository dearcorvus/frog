/* 显示隐藏 */
.mask {
    width: 100%;
    padding-top: 30%;
    box-sizing: border-box;
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6)
}
.mask_box_toggle {
    transform: translate(0, 0)
}

.mask-box{
    position: fixed;
    left: 0;
    bottom: 0;
    transform: translate(0, 100%);
    backface-visibility: hidden;
    z-index: 5000;
    width: 100%;
    background-color: #fff;
    transition: transform .3s;
    overflow: hidden;
    min-height: 80%;
}

.mask_box_toggle {
    transform: translate(0, 0)
}


.share-top{
  width: 100%;
  height: 100rpx;
  background-color: #ddd;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.canvas-box{
  width: 100%;
  padding: 0 80px;
  box-sizing: border-box;
}

.baoTo{
  width: 94%;
  height: 100rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  background-color: red;
  margin: 20rpx auto;
  border-radius: 10rpx;
}
.canvas-info{
  margin-top: 20rpx;
  box-shadow: 0px 0px 10px #ddd;
  border-radius: 10rpx;
  background-color: #fff;
}