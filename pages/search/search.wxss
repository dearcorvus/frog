/* pages/search/search.wxss */
.search_box{
  width: 100%;
  height: 90rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #e1e1e1;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.search_box view{
  width: 100%;
  height: 60rpx;
  border-radius: 60rpx;
  background-color: #f7f7f7;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #bfbfbf;
}
.INsearchicon{
  margin-right: 10rpx;
}
.weui-input{
  width: 70%;
}

.search-label{
  width: 100%;
  height: 50rpx;
  padding:0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #000;
  line-height: 50rpx;
  display: flex;
  justify-content: space-between;
}
.search-label view{
  width: 30%;
  text-align: center;
}

.search-list{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.search-item{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.search-item-img{
  width: 200rpx;
  height: 200rpx;
}
.search-item-img image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.search-item-info{
  width: 500rpx;
  font-size: 30rpx;
}
.search-item-title{
  font-size: 30rpx;
  color: #000;
  font-weight: 600;
}
.search-item-label{
  font-size: 26rpx;
  color: #59585d;
  display: flex;
  justify-content: flex-start;
}
.search-item-label view{
  height: 30rpx;
  line-height: 30rpx;
  border-right: 1px solid #ddd;
  padding:0 10rpx;
}
.search-item-evaluate{
  font-size: 26rpx;
  color: #59585d;
}
.search-company{
  font-size: 22rpx;
  color: #bfbfbf;
  display: flex;
  justify-content: space-between;
}
.search-price{
  font-size: 32rpx;
  color: #f53121;
}