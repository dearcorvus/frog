/* pages/visaSearch/visaSearch.wxss */
page{
  background-color: #f7f7f7;
}
.visa_top{
  width: 100%;
  background-color: #fff;
  padding: 30rpx 0;
}
.visa_search{
  width: 700rpx;
  height: 64rpx;
  background-color: #eeeeee;
  margin:0 auto;
  border-radius: 6rpx;
  display: flex;
  align-items: center;

  font-size: 32rpx;
  color: #9b9b9b;
  line-height: 64rpx;
}
.serarch_btn{
  margin: 0 16rpx 0 20rpx ;
}
.hot_title{
  font-size: 26rpx;
  color: #555555;
  line-height: 50rpx;
  padding-left: 20rpx;
}
.hot_city_box{
  width: 100%;
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.hot_city_box::after{
  content: "";
  width: 160rpx;
  height: 70rpx; 
}
.hot_city_box > view{
  width: 160rpx;
  height: 70rpx;
  border: solid #e1e1e1 1px;
  font-size: 26rpx;
  color: #555555;
  text-align: center;
  line-height: 70rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}


.word_title{
  font-size: 26rpx;
  color: #555555;
  line-height: 50rpx;
  padding-left: 20rpx;
}
.word_sort_list{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  font-size: 26rpx;
  color: #000;
  line-height: 86rpx;
}
.word_sort_list view{
  width: 100%;
  height: 86rpx;
  text-indent: 10rpx;
  border-bottom: 1px solid #e4e4e4;
}
.word_sort_list view:last-child{
  border:none;
}


/* 字母滑动 */

.a-z{
  width: 55rpx;
  position: fixed;
  top: 112rpx;
  text-align: center;
  right: 5rpx;
  color: #3399CC;
  font-size: 30rpx;
  /* border: 1rpx solid #3399CC;  */
  bottom: 0;
}
.a-z>view{
  height:40rpx;
}
 


 
.city-item-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #FFFFFF;
}
 
.city-item {
  width: 100%;
  height: 86rpx;
  padding:0 20rpx;  
  box-sizing: border-box;
}

.city-item view{
  width: 100%;
  height: 86rpx;
  font-size: 26rpx;
  color: #000;
  line-height: 86rpx;  
  border-bottom: 1px #e4e4e4 solid;
}
/* .city-item:last-child view{
  border:none;
} */






.city-item-A-Z{
  width: 100%;
  height: 50rpx;
  background-color: #EEEEEE;
  border-top: 1rpx solid #CCCCCC;    
  margin-top: -1rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #555555;
  line-height: 50rpx;
  padding-left: 20rpx;
}
 
 
.search-box {
  top: 0;
  position: fixed;
  width: 100%;
  background: #eee;
  height: 110rpx;
  font-size: 30rpx;
  border-bottom:1rpx solid #DDDDDD; 
}
 
.search-input {
  height: 70rpx;
  line-height: 60rpx;
  width: 80%;
  margin-left: 7.5%;
  border-radius: 20rpx;
  background: #fff;
  margin-top: 20rpx;
  padding-left: 5%;
}
 
.search-input-placeholder {
  text-align: center;
}