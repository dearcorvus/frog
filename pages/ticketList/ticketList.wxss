/* pages/ticketList/ticketList.wxss */
page{
  background-color: #606eab;
}
.ticket_box{
  width: 100%;
  padding: 12rpx;
  box-sizing: border-box;
}
.ticket_date_nav{
  width: 100%;
  height: 88rpx;
  background-color: #20509a;
  border-radius: 10rpx;
}
.ticket_list_item{
  width: 100%;
  height: 185rpx;
  background-color: #fff;
  margin-top: 12rpx;
  border-radius: 10rpx;
  padding: 25rpx 35rpx;
  box-sizing: border-box;
}

.ticket_price{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #000;
}
.ticket_price view:nth-child(1){
  width: 56%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ticket_price view:nth-child(1) image{
  width: 30%;
  height: 30rpx;
}
.ticket_price view:nth-child(2){
  font-size: 36rpx;
  color: #ffa456;
  font-weight: 600;
}
.ticket_price view:nth-child(2) text{
  font-size: 20rpx;
}







.ticketBottom{
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: rgba(50, 70, 100, 0.8)
}
.ticketBottom view{
  width: 25%;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  padding: 20rpx 0 10rpx;
  box-sizing: border-box;
}
.ticketBottom image{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin: 0 auto;
}

.ticketBottom .navCheck{
  background-color: rgba(50, 70, 100, 0.8);
  color: #13227a;
}