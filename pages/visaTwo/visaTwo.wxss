/* pages/visaTwo/visaTwo.wxss */
.visa-title{
  font-size: 32rpx;
  color: #8e8e93;
  font-weight: 600;
  text-align: center;
  margin-top: 50rpx;
}
.visa-subtitle{
  font-size: 22rpx;
  text-align: center;
  margin: 10rpx 0 50rpx;
}

.visa-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.visa-item{
  width: 49%;
  height: 300rpx;  
  margin-top: 10rpx;
}
.visa-banner{
  width: 100%;
  height: 400rpx;
  background-size: 100% 100%;
}
.visa-list view image{
  width: 100%;
  height: 100%;
}
.visa-label{
  width: 240rpx;
  background-color: #000;
  font-size: 26rpx;
  color: #fff;
  line-height: 50rpx;
  margin: 150rpx auto;
  text-align: center;
}
.visa-label view:nth-child(2){
  font-size: 20rpx;
  color: #000;
  line-height: 30rpx;
  background-color: #ffd60a;
}
.visa-item-image{
  width: 100%;
  height: 80%;
}
.visa-item-info{
  width: 100%;
  height: 20%;
  font-size: 24rpx;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.visa-item-info text{
  font-size: 20rpx;
}