/* pages/group/group.wxss */
page{
  background-color: #f7f7f7;
}
.ticket_search_box{
  width: 100%;
  height: 330rpx;
  border-bottom-right-radius:10%;
  border-bottom-left-radius:10%;
  background-color: #96aaf1;
  padding-top: 35rpx;
  box-sizing: border-box;
}
.ticket_serch_switch{
  width: 400rpx;
  height: 70rpx;
  border-radius: 70rpx;
  background-color: #fff;
  margin: 0 auto;
  padding: 5rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #000;
  line-height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ticket_choose{
  width: 690rpx;
  height: 570rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 35rpx auto 0;
  padding: 55rpx 45rpx;
  box-sizing: border-box;
}
.serch_logo{
  width: 60rpx;
  height: 60rpx;
}
.ticket_choose_city{
  width: 100%;
  height: 60rpx;
  font-size: 46rpx;
  color: #000;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.ticket_date_box{
  width: 100%;
  height: 94rpx;
  border-bottom: solid #dfdfdf 2rpx;
  font-size: 44rpx;
  color: #000;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
}
.ticket_date_box text{
  font-size: 22rpx;
  color: #000;
}




.ticke_btn{
  width: 600rpx;
  height: 94rpx;
  border-radius: 94rpx;
  background-color: #f2ab3f;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  margin: 0 auto;
}
.ticket_house{
  width: 100%;
  height: 120rpx;
  font-size: 32rpx;
  color: #000;
  line-height: 120rpx;
  display: flex;
  justify-content: space-between;
}

.ticke_nav{
  font-size: 24rpx;
  line-height: 40rpx;
  color: #000;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.ticke_nav view{
  width: 25%;
  height: 40rpx;
  border-right: 1px solid #dfdfdf;
  text-align: center;
}
.ticke_nav view:last-child{
  border:none;
}